@{
    var instructorObject = ViewBag.Instructor;
}

@*Add course msg modal*@
<div class="modal fade" id="InsLearMsgModal" tabindex="-1" aria-labelledby="InsLearMsgModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="InsLearModalLabel">Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" id="closebtn" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

@*edit modal*@
<div class="modal fade" id="InstructorEdit" tabindex="-1" aria-labelledby="InstructorEditLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3ABEF9; color: white;">
                <h5 class="modal-title">Edit Admin Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" id="closebtn" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="InstructorEditForm" method="post" action="@Url.Action("UpdateInstructor","Instructor")">
                    <div class="mb-3">
                        <label for="InstructorNameEdit" class="form-label">Name:</label>
                        <input type="text" id="InstructorNameEdit" class="form-control" name="InstructorNameEdit" value="@instructorObject.InstructorName" autocomplete="off" />
                    </div>

                    <div class="mb-3">
                        <label for="InstructorPasswordEdit" class="form-label">Password:</label>
                        <input type="password" id="InstructorPasswordEdit" class="form-control" name="InstructorPasswordEdit" value="@instructorObject.InstructorPassword" autocomplete="off" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">

                <button type="submit" form="InstructorEditForm" id="InstructorUpdateBtn" class="btn btn-warning">Update</button>
            </div>
        </div>
    </div>
</div>

@*edit msg modals*@
<div class="modal fade" id="InstructorEditMsgModal" tabindex="-1" aria-labelledby="InstructorEditMsgModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="InstructorEditMsgModalLabel">Message</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" id="closebtn" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="InstructorEditMsg"></p>
            </div>
        </div>
    </div>
</div>

@*logout modal*@
<div class="modal fade" id="InstructorLogout" tabindex="-1" aria-labelledby="InstructorLogoutLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3ABEF9; color: white;">
                <h6> Sure To Logout ?</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-footer">

                <button type="button" class="btn btn-danger" id="logoutButton">Logout</button>
            </div>
        </div>
    </div>
</div>





@*view modal*@
<div class="modal fade" id="InstructorView" tabindex="-1" aria-labelledby="InstructorViewLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #3ABEF9; color: white;">
                <h5 class="modal-title">Your Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="InstructorName" class="form-label">Name:</label>
                    <p id="InstructorName" class="form-text">@instructorObject.InstructorName</p>
                </div>
                <div class="mb-3">
                    <label for="InstructorEmail" class="form-label">Email:</label>
                    <p id="InstructorEmail" class="form-text">@instructorObject.InstructorEmail</p>
                </div>
                <div class="mb-3">
                    <label for="InstructorPassword" class="form-label">Password:</label>
                    <p id="InstructorPassword" class="form-text">@instructorObject.InstructorPassword</p>
                </div>
            </div>

        </div>
    </div>
</div>



